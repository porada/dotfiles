#!/bin/sh

# shellcheck source=bin/domlib
. "$(dirname "$(realpath "$0")")/domlib"

# Migrate `extra.fish`
if [ -f "$DOMFILES/extra.fish" ]; then
  __print_heading_dimmed 'Migrating `extra.fish`'
  __ mv "$DOMFILES/extra.fish" "$DOMFILES_FISH_CONFIG_DIR/extra.fish"
fi

# Remove deprecated `node` versions
for formula in node node@22; do
  if __is_brew_installed "$formula"; then
    __print_heading_dimmed "\`$formula\` will be replaced with \`node@24\`"
    __ brew uninstall "$formula"
  fi
done

# Ensuring `.local` is migrated out of the repository
if [ -d "$DOMFILES/.local" ] && [ -L "$HOME/.local" ]; then
  __print_heading_dimmed "Migrating \`.local\` out of \`$DOMFILES\`"

  __ rm "$HOME/.local"
  __ mv "$DOMFILES/.local" "$HOME/.local"
  __chmod "$HOME/.local"
  __ rm -f "$HOME/.local/.keep"

  if [ -L "$HOME/.local" ]; then
    __print_error_and_exit 'Migration failed'
  else
    __print_confirmation 'Migration complete'
  fi
fi

# Ensuring `.ssh` is migrated out of the repository
if __is_ssh_configured && [ -d "$DOMFILES/.ssh" ] && [ -L "$HOME/.ssh" ]; then
  __print_heading_dimmed "Migrating \`.ssh\` out of \`$DOMFILES\`"

  __ rm "$HOME/.ssh"
  __ mv "$DOMFILES/.ssh" "$HOME/.ssh"
  __ rm -f "$HOME/.ssh/.keep"

  if [ -L "$HOME/.ssh" ] || [ -L "$DOMFILES_SSH_KEY" ]; then
    __print_error_and_exit 'Migration failed'
  else
    __print_confirmation 'Migration complete'
  fi
fi

# Ensuring `.vim` is migrated out of the repository
if [ -d "$DOMFILES/.vim" ] && [ -L "$HOME/.vim" ]; then
  __print_heading_dimmed "Migrating \`.vim\` out of \`$DOMFILES\`"

  __ rm "$HOME/.vim"
  __ mv "$DOMFILES/.vim" "$HOME/.vim"
  __chmod "$HOME/.vim"
  __ rm -f "$HOME/.vim/.keep"

  if [ -L "$HOME/.vim" ]; then
    __print_error_and_exit 'Migration failed'
  else
    __print_confirmation 'Migration complete'
  fi
fi
