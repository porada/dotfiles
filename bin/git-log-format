#!/bin/sh

# shellcheck source=bin/dotlib
. "$(dirname "$(realpath "$0")")/dotlib"

# Output the log format string
params="--date=format:'%Y-%m-%d / %H:%M'"
params="$params --pretty=format:'%C(dim)%h"
test "${1-}" = "--refs" && params="$params%C(reset)%C(red)%d"
params="$params %C(reset)%s %C(dim)%cd / %an%C(reset)'"

echo "$params"
