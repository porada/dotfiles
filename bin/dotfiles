#!/bin/sh

# Enable strict mode
set -eu

# Run the available `dotfiles` command
# or list all available commands
BIN_PATH="$(dirname "$(realpath "$0")")"

if [ $# -gt 0 ]; then
  COMMAND_PATH="$BIN_PATH/dotfiles-$*"

  if [ -x "$COMMAND_PATH" ]; then
    exec "$COMMAND_PATH"
  fi
fi

printf "\n\033[1mAvailable Commands\033[0m\n\n"
ls "$BIN_PATH"
