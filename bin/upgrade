#!/bin/sh

# Update Homebrew and installed apps, then check if everythingâ€™s fine
if hash brew 2>/dev/null; then
  brew update && brew upgrade && brew cleanup
  brew doctor && brew cleanup --force
fi

# Update globally installed Node packages
npm upgrade --global && yarn global upgrade

# Update RubyGems and installed gems
gem update --system && gem uninstall --all --executables --ignore-dependencies && install-dependencies ruby
