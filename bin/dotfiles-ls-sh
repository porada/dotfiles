#!/bin/sh

# Enable strict mode
set -eu

# List all shell scripts that come with the dotfiles
# (Fish shell scripts can be listed with `dotfiles ls-fish`)
DOTFILES_BIN_PATH="$(dirname "$(realpath "$0")")"
cd "$(dirname "$DOTFILES_BIN_PATH")"

git ls-files --cached --exclude-standard \
  | while read -r file; do
    if [ ! -e "$file" ] || [ -L "$file" ]; then
      continue
    fi

    if [ "${file##*.}" = "sh" ] || head -n 1 "$file" | grep -q '^#!.*/sh'; then
      echo "${file#./}"
    fi
  done
