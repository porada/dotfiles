#!/bin/sh

# Symlink all dotfiles
for source in .atom .config/fish .gemrc .gitconfig .hushlogin .vim .vimrc; do
  target=~/$source
  source=~/.dotfiles/$source

  # Make sure parent directories exist before symlinking
  mkdir -p `dirname $target`
  rm -rf $target
  ln -s $source $target
done

# Create additional files
touch ~/.dotfiles/.config/fish/extra.fish
touch ~/.z

# Miscellaneous
echo ".gitconfig: Remember to change your user info"
