#!/bin/sh

for source in .atom .config/fish .gemrc .gitconfig .hushlogin .hyper.js .vim .vimrc; do
  target=~/$source
  source=~/.dotfiles/$source

  # Make sure parent directories exist before symlinking
  mkdir -p `dirname $target`
  rm -rf $target
  ln -s $source $target
done

touch ~/.z

# Ignore if the user name starts with `dom`
if whoami | grep -vi "^dom" > /dev/null 2>&1; then
  echo ".gitconfig: Remember to change your user info"
fi
