#!/bin/sh

# shellcheck source=bin/dotlib
. "$(dirname "$(realpath "$0")")/dotlib"

# Lint and format POSIX shell scripts that come with the dotfiles
# (lints all files when no paths are provided)
__dotfiles_cd_root

if [ $# -eq 0 ]; then
  __ifs_set
  # shellcheck disable=SC2046
  set -- $("$DOTFILES_BIN_DIR/dotfiles-dev-list-sh")
  __ifs_restore
fi

if [ $# -eq 1 ]; then
  __print_heading "Formatting and linting \`$1\`"
else
  __print_heading "Formatting and linting POSIX shell scripts"
fi

__dotfiles_pnpm format "$@"
__shellcheck "$@"
