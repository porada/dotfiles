#!/bin/sh

# shellcheck source=bin/domlib
. "$(dirname "$(realpath "$0")")/domlib"

# Abort when files have been `git skipped`,
# otherwise theyâ€™ll be affected by the reset
skipped=$(__domfiles_bin git-skipped)

if [ -n "$skipped" ]; then
  __print_error_and_exit 'The repository contains skipped files'
fi

git reset --hard "$@"
