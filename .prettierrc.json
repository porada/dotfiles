{
	"plugins": ["prettier-plugin-sh"],
	"singleQuote": true,
	"overrides": [
		{
			"files": "./bin/*",
			"options": {
				"parser": "sh"
			}
		},
		{
			"files": ["*.js", "*.mjs"],
			"options": {
				"bracketSpacing": true,
				"quoteProps": "consistent",
				"trailingComma": "es5"
			}
		},
		{
			"files": "*.plist",
			"options": {
				"parser": "html",
				"printWidth": 999
			}
		}
	]
}
