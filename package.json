{
	"name": "dotfiles",
	"private": true,
	"engines": {
		"node": "^24.11.0",
		"pnpm": ">=10"
	},
	"devDependencies": {
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"prettier": "3.7.3",
		"prettier-plugin-sh": "0.18.0"
	},
	"scripts": {
		"fix": "pnpm format . && pnpm --silent lint:fish && pnpm --silent lint:sh",
		"format": "prettier --log-level=error --ignore-unknown --write",
		"lint:fish": "bin/dotfiles-dev-lint-fish",
		"lint:sh": "bin/dotfiles-dev-lint-sh",
		"prepare": "husky"
	}
}
