{
	"name": "dotfiles",
	"private": true,
	"devDependencies": {
		"husky": "9.1.7",
		"lint-staged": "16.2.3",
		"prettier": "3.6.2",
		"prettier-plugin-sh": "0.18.0",
		"shellcheck": "4.1.0"
	},
	"scripts": {
		"fix": "npm run format -- .; npm run format:fish -- $(dotfiles-ls-fish | grep -vF -e 'aliases.fish' -e 'config.fish'); npm run lint:fish -- $(dotfiles-ls-fish); npm run lint:sh -- $(dotfiles-ls-sh)",
		"format": "prettier --ignore-unknown --write",
		"format:fish": "fish_indent --write",
		"lint:fish": "fish --no-execute",
		"lint:sh": "npx shellcheck",
		"lint:staged": "npx lint-staged --relative",
		"prepare": "husky"
	},
	"lint-staged": {
		"*": "npm run format --",
		"**/!(aliases|config).fish": "npm run format:fish --",
		"*.fish": "npm run lint:fish --",
		"*.sh": "npm run lint:sh --",
		".husky/*": "npm run lint:sh --",
		"bin/*": [
			"dotfiles-chmod",
			"npm run lint:sh --"
		]
	}
}
