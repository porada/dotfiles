{
	"name": "dotfiles",
	"private": true,
	"devDependencies": {
		"husky": "9.1.7",
		"lint-staged": "16.1.2",
		"prettier": "3.6.2",
		"prettier-plugin-sh": "0.18.0"
	},
	"scripts": {
		"fix": "npm run format -- .",
		"format": "prettier --write",
		"format:fish": "fish_indent --write",
		"lint:fish": "fish --no-execute",
		"lint:staged": "npx lint-staged --relative",
		"prepare": "husky"
	},
	"lint-staged": {
		"**/*": "npm run format --",
		"*.fish": [
			"npm run format:fish --",
			"npm run lint:fish --"
		]
	}
}
