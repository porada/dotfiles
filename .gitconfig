[alias]
	a = add -v
	c = commit -v
	p = pull

	ch = checkout
	cx = checkout HEAD --
	cp = cherry-pick

	ra = rebase --abort
	rc = rebase --continue
	rs = rebase --skip

	branches = branch -a
	contributors = shortlog -sn
	remotes = remote -v
	tags = tag -l

	skip = update-index --assume-unchanged
	unskip = update-index --no-assume-unchanged

	# Quick commits
	boom = commit -am 'ðŸ’¥' --no-verify
	deps = commit -am 'Update dependencies'

[core]
	excludesfile = ~/.dotfiles/.gitignore.global

[diff]
	algorithm = histogram
	colorMoved = dimmed-zebra
	colorMovedWS = allow-indentation-change

[help]
	autocorrect = prompt

[init]
	defaultBranch = main

[merge]
	ff = only

[pager]
	diff = ~/.dotfiles/bin/diff | less --chop-long-lines
	show = ~/.dotfiles/bin/diff | less --chop-long-lines

[pull]
	rebase = true

[push]
	default = simple
	autoSetupRemote = true

[rebase]
	autoStash = true

[rerere]
	enabled = true

[status]
	showUntrackedFiles = all
	submoduleSummary = true

