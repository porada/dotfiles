[core]
	excludesfile = ~/.dotfiles/.gitignore.global

[alias]
	# Simple aliases
	a = add -v
	c = commit -v
	f = fetch
	l = log
	p = pull

	ch = checkout
	cx = checkout HEAD --

	rc = rebase --continue
	rs = rebase --skip
	ra = rebase --abort

	cp = cherry-pick
	tags = tag -l
	branches = branch -a
	remotes = remote -v
	contributors = shortlog -sn

	skip = update-index --assume-unchanged
	unskip = update-index --no-assume-unchanged

	# Quick commits
	boom = commit -am "ðŸ’¥" --no-verify
	deps = commit -am "Update dependencies"
	nail = commit -am "ðŸ’…"

[pull]
	rebase = true

[push]
	default = simple
	autoSetupRemote = true

[rebase]
	autoStash = true

[init]
	defaultBranch = main

[user]
	# Please change this if youâ€™re not me
	name = Dominik Porada
	email = dominik@porada.co

[pager]
	# Take advantage of the better built-in diff
	diff = ~/.dotfiles/bin/diff | less --chop-long-lines
	show = ~/.dotfiles/bin/diff | less --chop-long-lines
