# Quick navigation
abbr p "cd ~/Projects"

# Shorten the frequently used commands
abbr c "code"
abbr g "git"
abbr k "killall"
abbr o "open"
abbr v "vim"

# Show hidden files by default when using `ls`
alias ls="ls -A"

# Use syntax highlighting when using `cat`
alias cat="bat"

# Recursively remove given files and directories
abbr rr "rm -rfv"
